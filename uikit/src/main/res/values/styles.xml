<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/sfprodisplaybold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Subtitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/sfprodisplayregular</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="BlackTitle" parent="Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WhiteTitle" parent="Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="WhiteSubtitle" parent="Subtitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BudgeText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/sfprodisplaybold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OrangeSubtext" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/sfprodisplayregular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/orange</item>
    </style>
</resources>